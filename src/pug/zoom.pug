.s-zoom
	.container
		ul.s-zoom__tabs
			li.s-zoom__tab.s-zoom__tab_active(data-filter="facade") Фасад
			li.s-zoom__tab(data-filter="roof") Кровля
		.s-zoom__grid
			.s-zoom__column.s-zoom__column_pr
				.s-zoom__content(data-filter="roof" style="display: none;")
					each i in [1,2,3,4]
						.swiper-slide
							img.s-zoom__pr(src="images/zoom/pr/"+ i +".jpg" data-zoom-image="images/zoom/zoom/"+ i +".jpg")
				.s-zoom__content(data-filter="facade" style="display: none;")
					each i in [5,6,7,8,9,10]
						.swiper-slide
							img.s-zoom__pr(src="images/zoom/pr/"+ i +".jpg" data-zoom-image="images/zoom/zoom/"+ i +".jpg")
				.swiper-container.zoom-swiper
					.swiper-wrapper
