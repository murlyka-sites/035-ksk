.s-developing {
	position relative
	padding 25px 0 
	
	@media (min-width 768px) {
		padding 40px 0 
	}
	
	@media (min-width 1000px) {
		padding 80px 0 40px
	}
	
	&__container {
		position relative
	}
	
	&__title {
		width 100%
		margin 0
		text-align center
		text-align left
		font-size 16px 
		line-height 1.6
		
		@media (min-width 768px) {
			position absolute
			top 0
			left 0
			padding 20px 0 0
			font-size 20px 
		}
		
		@media (min-width 1200px) {
			font-size 30px
		}
		
		@media (min-width 1600px) {
			padding 70px 0 0
		}
	}
	
	&__frame {
		display block
		width 360px
		margin auto
		height 360px
		
		@media (min-width 768px) {
			width 480px
			height 480px
		}
		
		@media (min-width 992px) {
			width 610px
			height 610px 
		}
	}
}