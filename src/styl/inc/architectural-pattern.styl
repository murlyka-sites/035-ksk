.s-architectural-pattern {
	padding 25px 0
	
	@media (min-width 1200px) {
		padding 40px 0
	}
	@media (min-width 1600px) {
		padding 110px 0
	}
	
	&__title {
		margin-bottom 40px 
		
		@media (min-width 1200px) {
			margin-bottom 80px
		}
		
		@media (min-width 1200px) {
			margin-bottom 120px 
		}
		
		@media (min-width 1600px) {
			margin-bottom 150px 
		}
	}
	
	&__grid {
		padding 20px
		background white 
		
		@media (min-width 1000px) {
			padding 25px 50px
		}
		
		@media (min-width 1200px) {
			display flex
			padding 0
			background none 
		}
	}
	
	&__cell {
		display flex
		flex-direction column
		justify-content center
		
		@media (min-width 1200px) {
			width 50%
			flex none
		}
		
		&_pr {
			background white
			
			@media (min-width 1200px) {
				padding 0 40px 0 0
				background linear-gradient(118deg, transparent 0%, transparent 49%, white 49%, white 100%)
			}
			
			@media (min-width 1600px) {
				padding-right 60px
			}
		}
		
		&_text {
			background white 
			
			
			@media (min-width 1200px) {
				padding 25px 50px
			}
			
			@media (min-width 1600px) {
				padding 25px 75px
			}
			
			@media (min-width 1920px) {
				padding 25px 100px
			}
		}
	}
	
	&__pr {
		display block
		width 100%
		margin 0 auto 0
		height auto
		
		@media (min-width 768px) {
			width 50%
		}
		
		@media (min-width 1200px) {
			width 100%
			margin 0
		}
	}
	

	&__title-3 {
		margin-bottom 25px
		
		@media (min-width 1200px) {
			margin-bottom 50px 
		}
		
		@media (min-width 1920px) {
			margin-bottom 80px 
		}
	}
	
	&__text {
		max-width 100%
		font-size 14px 
		font-weight 700 
		line-height 1.8
		
		@media (min-width 1000px) {
			font-size 16px
		}
		
		@media (min-width 1200px) {
			width 520px 
		}
	}
	
	&__ul {
		padding 0
		margin 0
		// font-size 16px 
		font-weight 700
		// line-height 30px
		list-style-type none
	}
	
	&__item {
		&::before {
			content 'â€¢ '
		}
		
		margin-bottom 10px 
		
		@media (min-width 1000px) {
			margin-bottom 20px 
		}
		
		@media (min-width 1920px) {
			margin-bottom 30px
		}
	}
	
	&__p {
		
	}
}