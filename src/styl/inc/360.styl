.s-overview-360 {
	position relative
	padding 40px 0
	
	&__container {
		position relative
	}
	
	&__title {
		position absolute
		top 0
		left 0
		width 100%
		margin 0
		text-align center
		
		@media (min-width 768px) {
			text-align left
		}
	}
	
	&__frame {
		display block
		width 360px
		max-width 100%
		margin auto
		height 360px
		
		@media (min-width 768px) {
			width 480px
			height 480px
		}
		
		@media (min-width 992px) {
			width 610px
			height 610px 
		}
	}
	
	&__pagination {
		position absolute
		bottom 0
		right 0
		left 0
		max-width 100%
		
		@media (min-width 768px) {
			left auto
		}
	}
}

.overview-360-pagination {
	display flex
	justify-content center
	list-style-type none
	margin 0
	padding 0
	
	@media (min-width 768px) {
		justify-content flex-end
	}
	
	&__item {
		position relative
		margin 0 15px 0 0
		cursor pointer
		
		@media (min-width 1600px) {
			margin 0 22px 0 0
		}

		@media (min-width 1600px) {
			margin 0 30px 0 0
		}

		&:last-child {
			margin 0
		}
		
		&_active {
			&::before {
				display block
				content ''
				position absolute
				top -5px
				left -5px
				right -5px
				bottom -5px
				border-radius 50%
				border 1px solid currentColor
				
				@media (min-width 1000px) {
					top -7px
					left -7px
					right -7px
					bottom -7px
					border 2px solid currentColor
				}
				
				@media (min-width 1600px) {
					top -9px
					left -9px
					right -9px
					bottom -9px
				}
			}
		}
	}
		
	&__icon {
		display block
		width 30px 
		height auto
		
		@media (min-width 1000px) {
			width 40px 
		}

		@media (min-width 1600px) {
			width 57px
			
		}
	}
}