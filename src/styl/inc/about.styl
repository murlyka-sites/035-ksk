.s-about {
	padding 25px 0
	
	@media (min-width 768px) {
		padding 40px 0
	}
	
	@media (min-width 1600px) {
		padding 60px 0
	}
	
	&__title {
		margin-bottom 25px 
		
		@media (min-width 768px) {
			margin-bottom 40px 
		}
		
		@media (min-width 1000px) {
			margin-bottom 80px 
		}
		
		@media (min-width 1600px) {
			margin-bottom 120px
		}
	}
	
	&__grid {
		@media (min-width 1600px) {
			display flex
			align-items stretch
		}
	}
	
	&__column {
		&_big {
			display flex
			align-items center
			width 100%
			margin-bottom 20px 
			background white 
			flex none
			padding 25px
			
			@media (min-width 600px) {
				width calc(50% - 10px)
			}
			
			@media (min-width 1000px) {
				width calc(50% - 20px)
				padding 20px 40px 20px 60px
				margin-bottom 40px 
			}
			
			@media (min-width 1600px) {
				width 460px
				margin-right 40px
				margin-bottom 0
			}
			
			@media (min-width 1920px) {
				margin-right 80px 
			}
		}
		
		&_small {
			flex auto
		}
	}
	
	&__subgrid {		
		@media (min-width 600px) {
			display flex
			align-items stretch
			flex-wrap wrap
			height 100%
			margin -10px
		}
		
		@media (min-width 1000px) {
			margin -20px
		}
		
		@media (min-width 1920px) {
			margin -35px -25px
		}
	}
	
	&__cell {
		width 100%
		padding 10px 0
		
		@media (min-width 600px) {
			width 50%
			padding 10px 
		}
		
		@media (min-width 1000px) {
			padding 20px 
		}
		
		@media (min-width 1920px) {
			padding 35px 25px
		}
	}
}

.c-about {
	background  #dcdcdc
	height 100%
	padding 20px
	
	@media (min-width 1000px) {
		padding 30px 80px 50px
	}
	
	&__header {
		height 75px 
		display flex
		align-items center
		margin-bottom 30px
		
		@media (min-width 600px) {
			height 100px
		}
	}
	
	&__icon {
		width auto
		height 100%
	}
	
	&__label {
		margin-left 10px
		font-size 16px 
		color #47b8f2
		
		@media (min-width 768px) {
			font-size 22px 
		}
		
		@media (min-width 1000px) {
			margin-left 20px
		}
	}
	
	&__title {
		font-size 16px 
		font-weight 700 
		color #333232
	}
}

.c-about-text {
	font-size 15px 
	font-weight 700 
	color #333232
	
	@media (min-width 600px) {
		font-size 20px 
	}
	
	@media (min-width 1000px) {
		font-size 25px 
	}
	
	@media (min-width 1200px) {
		font-size 30px 
	}
	
	
	&__label {
		margin 0
	}
	
	&__list {
		padding 0
		margin 0 0 20px
		list-style-type none
	}
	
	&__item {
		&::before {
			content 'â€¢ '
		}
	}
}