

.s-use {
	padding 35px 0 40px
	
	&__title {
		margin-bottom 25px 
		text-align center
		
		@media (min-width 600px) {
			text-align left
		}
		
		@media (min-width 1000px) {
			margin-bottom 40px
		}
		
		@media (min-width 1200px) {
			margin-bottom 70px 
		}
		
		@media (min-width 1600px) {
			margin-bottom 120px 
		}
		
		@media (min-width 1920px) {
			margin-bottom 170px 	
		}
	}
	
	&__grid {
		
		position relative
		
		@media (min-width 600px) {
			display flex
		}
		

		&::after {
			content ''
			display block
			position absolute
			top 0 
			left 20%
			width 60%
			height 100%
			z-index -1 
			background #47B8F2
			
			@media (min-width 600px) {
				top 20% 
				left 0
				right 0
				width 100% 
				height 60% 
			}
		}
	}
	
	&__cell {
		padding 20px 0
		
		@media (min-width 600px) {
			width 50%
			padding 0 40px
		}
		
		@media (min-width 1000px) {
			padding 0 80px
		}
		
		@media (min-width 1600px) {
			padding 0 120px
		}
		
		@media (min-width 1920px) {
			padding 0 140px
		}
	}
	
	&__pr {
		border-radius 50%
		width 100%
		height auto
	}
}