.s-video {
	padding 25px 0
	
	@media (min-width 600px) {
		padding 40px 0
	}
	
	@media (min-width 1200px) {
		padding 80px 0
	}
	
	@media (min-width 1920px) {
		padding 120px 0
	}
	
	&__title {
		margin-bottom 15px
		
		@media (min-width 600px) {
			margin-bottom 40px
		}
		
		@media (min-width 1600px) {
			margin-bottom 50px
		}
		
		@media (min-width 1920px) {
			margin-bottom 75px
		}
	}
	
	&__slider {
		margin-bottom 15px 
		
		@media (min-width 600px) {
			margin-bottom 40px
		}
		
		@media (min-width 1600px) {
			margin-bottom 50px
		}
		
		@media (min-width 1920px) {
			margin-bottom 75px
		}
	}
}